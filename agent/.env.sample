# Copy to .env and set correct values:
#   cp .env.sample .env

# Required for router actions (Redis queue)
REDIS_URL=redis://localhost:6379/0

# Required for BROWSER_VISION (Selenium remote Chrome)
REMOTE_BROWSER_SERVER=http://localhost:4444

# LLM (required)
LLM_PROVIDER=ollama
LLM_MODEL=llama3.1:8B

# For provider=openai: set OPENAI_API_KEY
# For provider=gemini: set GOOGLE_API_KEY or GEMINI_API_KEY
# For provider=ollama: no token needed (local)

# Optional (defaults shown)
COMMAND_QUEUE=safeclaw:command_queue
RESPONSE_PREFIX=safeclaw:response:
